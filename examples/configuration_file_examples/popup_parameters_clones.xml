<configuration>	
	<displayed_animations>
	
	<popup>
		<displayed_animations>
			<image>
				<file_location>
					<hard_path path="input/images/yellow-alert.gif"></hard_path>
				</file_location>
				<position x="0" y="0"></position>
				<dimensions width="1170" height="700"></dimensions>	
			</image>
			<sound>
				<file_location>
					<hard_path path="input/sound/alerte.wav"></hard_path>
				</file_location>
				 <sound_mode value = "repeat_forever_when_visible">
                </sound_mode>
				<position x="200" y="90"></position>
				<dimensions width="400" height="380"></dimensions>	
			</sound>
		</displayed_animations>
		
		<animation_specific_variable_actuator>
			<variable name="pausing_because_of_popup"></variable>
			<animation_trigger cause = "is_visible"></animation_trigger>
		</animation_specific_variable_actuator>
			
		<initial_display_time value = "0"></initial_display_time>
			
		<period_on>
			<periodic_refresh period = "50"></periodic_refresh>
		</period_on>	
		
		<period_off>
			<periodic_refresh period = "100"></periodic_refresh>
		</period_off>		
	</popup>
	
	</displayed_animations>
	
</configuration>

