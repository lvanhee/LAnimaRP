	<display_parameters>
		<fullscreen value="false"></fullscreen>
		<display_area x="000" y="000" width = "1600" height = "900"></display_area>
	</display_parameters>
	
	<event_publishers>
		<key_pressed_event_publisher name = "change_tab_button_pressed" value = "control"></key_pressed_event_publisher>
	</event_publishers>
	
	
    <displayed_animations>		
    	<image>
			<file_location><hard_path path="examples/images/warhammer_systeme_gestion_fichier.png"></hard_path></file_location>
			<stretching><mode value = "stretch"></mode>	</stretching>
			<display_area x="0" y="0" width = "1600" height = "900"></display_area>
		</image>
		
						
		<switcheable_animation>
			<trigger event_producer="change_tab_button_pressed"></trigger>
			
			<displayed_animations>
				<xml_textsource_animation>
					<file_location><hard_path path="examples/configuration_file_examples/configuration_ship_damage_status.xml"></hard_path></file_location>
				</xml_textsource_animation>
			</displayed_animations>
			
			<displayed_animations>
				<xml_textsource_animation>
					<file_location><hard_path path="examples/configuration_file_examples/config_database_40k_on_dropbox.xml"></hard_path></file_location>
				</xml_textsource_animation>
			</displayed_animations>
		
			<displayed_animations>
				<xml_textsource_animation>
					<file_location><hard_path path="examples/configuration_file_examples/chat_1.xml"></hard_path></file_location>
				</xml_textsource_animation>
			</displayed_animations>
			
			<displayed_animations>
				<xml_textsource_animation>
					<file_location><hard_path path="examples/configuration_file_examples/chat_2.xml"></hard_path></file_location>
				</xml_textsource_animation>
			</displayed_animations>
			
			<displayed_animations>
				<xml_textsource_animation>
					<file_location><hard_path path="examples/configuration_file_examples/chat_3.xml"></hard_path></file_location>
				</xml_textsource_animation>
			</displayed_animations>
		</switcheable_animation>
		
		
		<notification name = "reaction new message chat 1" duration = "10000">
			<trigger event_producer="updated_value">
				<text_source>
					<file_location><hard_path path="https://docs.google.com/document/d/1ad-9ITRxdkJG8lix_vYAm1b2ll33W-OiCo9feXlsLGY/edit"></hard_path></file_location>
				<refresh_period refresh_period="5000"></refresh_period>
			</text_source>
			</trigger>
		
     		<displayed_animations>
     			<image>
					<file_location><hard_path path="examples/images/machine_god.gif"></hard_path></file_location>
					<stretching><mode value = "stretch"></mode>	</stretching>
					<display_area x="60" y="60" width = "170" height = "170"></display_area>
				</image>
				
				<sound sound_mode="one_shot">
					<file_location><hard_path path="examples/sound/alerte.wav"></hard_path></file_location>
				</sound>
				
			<text_prompt name="notification omnimessie" color = "200,50,50"> 
			<display_area x="300" y="70" width = "500" height = "40"></display_area>
			<text_source raw_text="INCOMING COMMUNICATION"></text_source>
     		</text_prompt>
		
     		</displayed_animations>
     		
     </notification>
		
		     		
     </displayed_animations> 
     
     

</configuration>